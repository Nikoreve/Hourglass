<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary_sixth"
    tools:context=".SettingsActivity">

    <include
        layout="@layout/toolbar_layout"></include>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="91dp"
        android:layout_marginTop="110dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hourglass_title"></ImageView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/language_settings"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext_background"
                android:drawableEnd="@drawable/arrow_forward"
                android:gravity="center"
                android:onClick="onClick"
                android:paddingStart="24dp"
                android:text="@string/settingsTextLanguage"
                android:textAlignment="center"
                android:textColor="@color/textcolor_first_black"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <TextView
                android:id="@+id/theme_settings"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext_background"
                android:drawableEnd="@drawable/arrow_forward"
                android:gravity="center"
                android:onClick="onClick"
                android:paddingStart="24dp"
                android:text="@string/settingsTextTheme"
                android:textAlignment="center"
                android:textColor="@color/textcolor_first_black"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/language_settings"></TextView>

            <TextView
                android:id="@+id/manual_settings"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext_background"
                android:gravity="center"
                android:onClick="onClick"
                android:text="@string/settingsTextManual"
                android:textAlignment="center"
                android:textColor="@color/textcolor_first_black"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/theme_settings"></TextView>

            <TextView
                android:id="@+id/sfx_settings"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext_background"
                android:gravity="center"
                android:onClick="onClick"
                android:text="@string/settingsTextSFX"
                android:textAlignment="center"
                android:textColor="@color/textcolor_first_black"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/manual_settings"></TextView>

            <TextView
                android:id="@+id/music_settings"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext_background"
                android:gravity="center"
                android:onClick="onClick"
                android:text="@string/settingsTextMusic"
                android:textAlignment="center"
                android:textColor="@color/textcolor_first_black"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sfx_settings"></TextView>

            <TextView
                android:id="@+id/about_settings"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext_background"
                android:gravity="center"
                android:onClick="onClick"
                android:text="@string/settingsTextAbout"
                android:textAlignment="center"
                android:textColor="@color/textcolor_first_black"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/music_settings"></TextView>

            <Button
                android:id="@+id/back_settings"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="80dp"
                android:backgroundTint="@color/secondary_fourth"
                android:gravity="center"
                android:onClick="onClick"
                android:text="@string/settingsButtonBack"
                android:textAlignment="center"
                android:textColor="@color/textcolor_first_black"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/about_settings"></Button>
<!--                android:background="@drawable/custom_edittext_background"-->


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>