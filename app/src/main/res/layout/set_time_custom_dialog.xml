<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setTimeConstraintLayout"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/primary_fifth"
    tools:context=".SetTimeActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutDialog"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/setTimeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/setTimeTitle"
            android:textStyle="bold"
            android:textSize="21sp"
            android:textColor="@color/textcolor_second"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/layoutDialog"></TextView>

        <RelativeLayout
            android:id="@+id/layoutRelative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textview_setTime_minutes"
                android:layout_width="63dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/minutesTxt"></TextView>

            <TextView
                android:id="@+id/textview_setTime_seconds"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/textview_setTime_minutes"
                android:gravity="center"
                android:text="@string/secondsTxt"
                ></TextView>

            <NumberPicker
                android:id="@+id/numberPicker_setTime_minutespicker"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:background="@color/secondary_sixth"></NumberPicker>

            <NumberPicker
                android:id="@+id/numberPicker_setTime_secondspicker"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/numberPicker_setTime_minutespicker"
                android:background="@color/secondary_sixth"></NumberPicker>

        </RelativeLayout>

        <TextView
            android:id="@+id/textView_setTime_withPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="92dp"
            android:layout_marginTop="24dp"
            android:gravity="center_horizontal"
            android:text="@string/withPauseText"
            android:textSize="17sp"
            android:textColor="@color/textcolor_second"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutRelative"></TextView>

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkBox_setTime_withpause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toRightOf="@id/textView_setTime_withPause"
            app:layout_constraintTop_toBottomOf="@id/layoutRelative"></androidx.appcompat.widget.AppCompatCheckBox>

        <Button
            android:id="@+id/button_setTime_doneDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="102dp"
            android:layout_marginTop="12dp"
            android:text="@string/doneButton"
            android:textColor="@color/white"
            android:backgroundTint="@color/secondary_third"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/checkBox_setTime_withpause" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
